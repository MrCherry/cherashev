= simple_form_for(@page) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    = f.input :slug
    = f.input :text, as: :wysihtml5

  .form-inputs
    .row
      .col-xs-3
        = f.input :category,
                  as: :select,
                  collection: categories_options,
                  selected: f.object.try(:object).try(:category)
      .col-xs-3
        = f.input :state,
                  as: :select,
                  collection: states_options,
                  selected: f.object.try(:object).try(:state)
    br

    .form-actions
      = f.button :submit, t('actions.save')
